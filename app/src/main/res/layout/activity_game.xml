<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/normal_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/gray"
            android:theme="@style/Theme.NES"
            app:navigationIcon="@drawable/back">
            <TextView
                android:id="@+id/game_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_gravity = "center"
                />
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="4dp">
        <com.willendless.nes.framework.impl.AndroidFastRenderView
            android:id="@+id/game_panel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/joypad"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/pad_up"
                android:src="@drawable/up_arrow"
                android:layout_gravity="center"
                android:layout_width="90dp"
                android:layout_height="70dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/pad_left"
                    android:src="@drawable/left"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="left"
                    android:layout_width="90dp"
                    android:layout_height="70dp"/>
                <ImageButton
                    android:id="@+id/pad_right"
                    android:src="@drawable/right"
                    android:layout_marginLeft="55dp"
                    android:layout_gravity="right"
                    android:layout_width="90dp"
                    android:layout_height="70dp"/>
            </LinearLayout>


            <ImageButton
                android:id="@+id/pad_down"
                android:src="@drawable/down"
                android:layout_gravity="center"
                android:layout_width="90dp"
                android:layout_height="70dp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/pad_select"
                android:text="@string/select"
                android:backgroundTint="@color/gray"
                android:textColor="@color/black"
                android:theme="@style/fab_square"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/pad_start"
                android:text="@string/start"
                android:backgroundTint="@color/gray"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/pad_a"
                android:text="A"
                android:textColor="@color/black"
                android:backgroundTint="@color/gray"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:padding="0dp"
                android:background="@drawable/round_button"
                android:layout_width="52dp"
                android:layout_height="52dp"
                app:cornerRadius="26dp"
                android:layout_margin="2dp"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/pad_b"
                android:text="B"
                android:textColor="@color/black"
                android:backgroundTint="@color/gray"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:layout_width="52dp"
                android:layout_height="52dp"
                app:cornerRadius="26dp"
                android:layout_margin="2dp"
                android:layout_gravity="center"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>